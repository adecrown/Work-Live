

<!doctype html>
<html>

<head>
  <meta charset="UTF-8">

  <title>Work Live</title>
  <!--<script src="../js/inline.js"></script>-->
    <link rel="stylesheet" href="stylesheets/style.css">
  <link rel="stylesheet" href="dash.css">
  <script src="socket.io/socket.io.js"></script>

</head>

<body>
  <section class="outer_body">
    <section class="inner_body">
      <div class="dashboard" id="dashboard">
        <div id="board">
        </div>
      </div>
      <!--<div class="jumbotron">
      </div>-->
      <div class="controls">
        <div class="vb">
          <a href="/overview">
          <button name="mDraw" id="sendIt" class="round red" value="<%= user._id %>">View
            <span class="round"></span>
          </button>
        </a>
        </div>
        <div class="vb">
          <button name="mDrawSession" id="mDrawSession" class="round green" value="<%= user.teacher.username %>">Begin
            <span class="round"></span>
          </button>
        </div>
      </div>

      <div class="drawtm">
        <div>
          <button id="dCircle" class="dropbtn">Circle</button>

          <div class="dropdown">
            <button class="dropbtn">Lines</button>
            <div class="dropdown-content">
              <a id="dLine">Single Line</a>
              <a  id="dMulti">Multi Line</a>
              <a href="#">Link 3</a>
            </div>
          </div>

          <button id="dText" class="dropbtn">Text</button>


          <input type="color" value="#005E7A" id="drawing-color" class="cot-btn">

          <div class="dropdown">
            <button class="dropbtn">Brushes</button>
            <div class="dropdown-content">
              <a href="#">Link 3</a>
            </div>
          </div>
          <input type="color" value="#005E7A" id="drawing-background-color" class="cot-btn">
        </div>
        <br/>
        <br/>

        <% var teachUsername = user.teacher.username %>
        <script>
        var getTUsername = <%- JSON.stringify(teachUsername) %>;
        </script>
        <canvas id="draw"  keepalive="true" resize></canvas>
      </div>


    </section>
  </section>
  <!-- <script src="wbs.js"></script>
  <script src="teacher.js"></script>-->
  <script src="javascripts/draw.js" canvas="draw" type="text/paperscript"></script>
  <script src="teacher.js"></script>
  <script src="javascripts/socket.js"></script>
  <script type="text/javascript" src="javascripts/paper.js"></script>
</body>

</html>
